generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider       = "zod-prisma-types"
  output         = "../../mobile/utils/zod"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      Status @default(TO_DO)
  createdAt   DateTime @default(now())
}

enum Status {
  TO_DO
  IN_PROGRESS
  DONE
}